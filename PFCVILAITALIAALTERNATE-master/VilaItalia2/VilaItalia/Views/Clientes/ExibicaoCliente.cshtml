<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-10">
        <table id="PesquisaCliente" class="ui celled table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Cliente</th>
                    <th>Telefone</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Cliente</th>
                    <th>Telefone</th>
                </tr>
            </tfoot>
        </table>
        <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="submeter" type="submit" value="Pesquisar" class="btn btn-default" />
            </div>
        </div>
