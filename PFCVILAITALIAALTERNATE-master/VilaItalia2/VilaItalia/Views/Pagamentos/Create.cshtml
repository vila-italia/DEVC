                @Html.DropDownList("BalcaoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BalcaoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
